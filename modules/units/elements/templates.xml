<Ui xmlns="http://www.blizzard.com/wow/ui/">
	<Button name="AuraIconBarTemplate" virtual="true">
		<Layers>
			<Layer level="ARTWORK" textureSubLevel="1">
				<Texture parentKey="Icon">
				</Texture>
			</Layer>
			<Layer level="OVERLAY" textureSubLevel="5">
				<FontString parentKey="Name" justifyH="LEFT">
					<Anchors>
						<Anchor point="LEFT" relativeKey="$parent.Bar" relativePoint="LEFT" x="25" />
					</Anchors>
				</FontString>
				<FontString parentKey="Time" justifyH="RIGHT">
					<Anchors>
						<Anchor point="RIGHT" relativeKey="$parent.Bar" relativePoint="RIGHT" x="-25" />
					</Anchors>
				</FontString>
			</Layer>
			<Layer level="BACKGROUND" textureSubLevel="1">
				<Texture parentKey="BarBackground">
					<Anchors>
						<Anchor point="TOPLEFT" relativeKey="$parent.Bar" relativePoint="TOPLEFT" />
						<Anchor point="BOTTOMRIGHT" relativeKey="$parent.Bar" relativePoint="BOTTOMRIGHT" />
					</Anchors>
				</Texture>
			</Layer>
		</Layers>
		<Frames>
			<Cooldown parentKey="Cooldown" inherits="CooldownFrameTemplate">
				<Anchors>
					<Anchor relativeKey="$parent.Icon" point="TOPLEFT" />
					<Anchor relativeKey="$parent.Icon" point="BOTTOMRIGHT" />
				</Anchors>
				<SwipeTexture>
					<Color r="1" g="1" b="1" a="0.8"/>
				</SwipeTexture>
			</Cooldown>
			<StatusBar parentKey="Bar" frameLevel="2">
			</StatusBar>
		</Frames>
	</Button>
</Ui>