<Ui xmlns="http://www.blizzard.com/wow/ui/">
	<Button name="AuraIconBarTemplate" virtual="true">
		<Layers>
			<Layer level="ARTWORK" textureSubLevel="1">
				<Texture parentKey="icon"></Texture>
			</Layer>
		</Layers>
		<Frames>
			<Cooldown parentKey="cd" inherits="CooldownFrameTemplate">
				<Anchors>
					<Anchor relativeKey="$parent.icon" point="TOPLEFT" />
					<Anchor relativeKey="$parent.icon" point="BOTTOMRIGHT" />
				</Anchors>
				<SwipeTexture>
					<Color r="1" g="1" b="1" a="0.4"/>
				</SwipeTexture>
			</Cooldown>
			<StatusBar parentKey="bar" frameLevel="2">
				<Layers>
					<Layer level="OVERLAY">
						<FontString parentKey="name" justifyH="LEFT">
							<Anchors>
								<Anchor point="LEFT" x="5" />
							</Anchors>
						</FontString>
						<FontString parentKey="time" justifyH="RIGHT">
							<Anchors>
								<Anchor point="RIGHT" x="-5" />
							</Anchors>
						</FontString>
					</Layer>
					<Layer level="BACKGROUND" textureSubLevel="1">
						<Texture parentKey="bg" setAllPoints="true"></Texture>
					</Layer>
				</Layers>
			</StatusBar>
		</Frames>
	</Button>
</Ui>